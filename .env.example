# BoerenKompas Environment Variables
# Copy this file to .env.local and fill in your real values
# 
# Get your Supabase credentials from:
# https://supabase.com/dashboard/project/_/settings/api

# =============================================================================
# REQUIRED: Supabase Public Config
# =============================================================================

# Your Supabase project URL (NOT the placeholder below!)
# Format: https://YOUR_PROJECT_REF.supabase.co
# Example: https://abcd1234efgh5678.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co

# Your Supabase anon/public key (a long JWT string, ~200 chars)
# This is safe to expose in the browser
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE

# =============================================================================
# OPTIONAL: Feature Flags
# =============================================================================

# Enable demo login button (set to 'true' only for development/demo)
NEXT_PUBLIC_ENABLE_DEMO_LOGIN=false

# =============================================================================
# SERVER-ONLY (Never expose these in NEXT_PUBLIC_ vars!)
# =============================================================================

# Supabase service role key - KEEP SECRET, server-side only
# Only needed for admin operations
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
